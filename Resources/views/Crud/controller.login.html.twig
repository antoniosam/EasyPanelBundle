<?php

namespace {{ namespace }};

use Ast\EasyPanelBundle\Services\EasyPanelService;
use Symfony\Bundle\FrameworkBundle\Controller\Controller;
use Sensio\Bundle\FrameworkExtraBundle\Configuration\Route;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Security\Http\Authentication\AuthenticationUtils;

{%  if prefix_controller_route is not empty %}
/**
 * @Route("{{ prefix_controller_route }}" )
 */
 {% endif %}
class LoginController extends Controller
{

    /**
     * @Route("/", name="{{ ruta }}_index")
     */
    public function indexAction(AuthenticationUtils $authenticationUtils, EasyPanelService $easypanel)
    {
        // get the login error if there is one
        $error = $authenticationUtils->getLastAuthenticationError();
        // last username entered by the user
        $lastUsername = $authenticationUtils->getLastUsername();

        return $easypanel->renderLogin([
        'last_username' => $lastUsername,
        'error' => $error
        ]);
    }
    /**
    * @Route("/logout", name="{{ ruta }}_logout")
    */
    public function logoutAction()
    {
        return  new Response();
    }


}
